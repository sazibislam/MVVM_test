<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.sazib.ksl">

  <application
      android:name="com.sazib.ksl.data.service.App"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity android:name="com.sazib.ksl.ui._registration.walkthrough.WalkThroughActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

        <activity
            android:name="com.sazib.ksl.ui._registration.signup.RegisterActivity"
            android:exported="false" />

        <activity
            android:name="com.sazib.ksl.ui.main.MainActivity"
            android:exported="true" />
        <activity
            android:name="com.sazib.ksl.ui._registration.reset_pass.ResetPassActivity"
            android:exported="true" />

        <activity
            android:name="com.sazib.ksl.ui._registration.successfull.SuccessfulActivity"
            android:exported="true" />

      <activity
          android:name="com.sazib.ksl.ui._registration.forget_pass.ForgetPassActivity"
          android:exported="true" />

      <activity
          android:name="com.sazib.ksl.ui._registration.signin.SigninActivity"
          android:exported="true" />

      <activity
          android:name="com.sazib.ksl.ui.todo.add_task.AddTaskActivity"
          android:exported="true" />

      <activity
          android:name="com.sazib.ksl.ui.todo.edit_task.EditTaskActivity"
          android:exported="true" />

      <activity
          android:name="com.sazib.ksl.ui.todo.todo_list.TodoListActivity"
          android:exported="true" />

      <activity
          android:name="com.sazib.ksl.ui.view_customer.ViewCustomerActivity"
          android:exported="true" />

      <meta-data
          android:name="preloaded_fonts"
          android:resource="@array/preloaded_fonts" />

      <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <dist:module dist:instant="true" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>