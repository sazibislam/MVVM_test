<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="android:windowContentOverlay">@null</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    <item name="android:textColorPrimary">@color/colorBlack</item>
    <item name="android:textColor">@color/text_color</item>
    <item name="android:windowBackground">@color/bg_color</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">16sp</item>
    <item name="android:typeface">sans</item>
    <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
    <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
    <item name="viewInflaterClass">androidx.appcompat.app.AppCompatViewInflater</item>
    <item name="android:windowDisablePreview">true</item>
    <item name="radioButtonStyle">@style/radioButtonStyle</item>
    <item name="android:radioButtonStyle">@style/radioButtonStyle</item>
    <item name="checkboxStyle">@style/checkboxStyle</item>
    <item name="android:checkboxStyle">@style/checkboxStyle</item>
  </style>

  <!--Crop ImagePicker-->
  <style name="ThemeCropImagePicker" parent="@style/Theme.AppCompat">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimary</item>
    <item name="titleTextColor">@color/colorWhite</item>
    <item name="actionMenuTextColor">@color/colorWhite</item>
    <item name="android:textColorPrimary">@color/colorWhite</item>
    <item name="android:windowBackground">@color/colorWhite</item>
  </style>

  <style name="TextAppearance.Text.Regular" parent="android:TextAppearance">
    <item name="fontFamily">@font/roboto_medium</item>
    <item name="android:textSize">@dimen/sp_16</item>
    <item name="android:letterSpacing">0.02</item>
  </style>

  <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">false</item>
    <item name="color">@color/bg_color</item>
  </style>

  <style name="TextStyle">
    <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    <item name="android:layout_marginTop">2dp</item>
    <item name="android:layout_marginBottom">2dp</item>
    <item name="android:layout_marginLeft">2dp</item>
    <item name="android:layout_marginRight">2dp</item>
    <item name="android:textColor">@color/colorBlack</item>
  </style>

  <!--bottom sheet Style start-->
  <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
    <item name="bottomSheetStyle">@style/cartBottomSheetStyle</item>
  </style>

  <style name="cartBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
    <item name="android:background">@drawable/bottom_sheet_cart_background</item>
    <item name="android:layout_marginStart">@dimen/dp_8</item>
    <item name="android:layout_marginEnd">@dimen/dp_8</item>
  </style>
  <!--bottom sheet Style end-->

  <!--admin and employee -->
  <style name="admin">
    <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    <item name="android:textColor">@color/colorBlack</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <!--admin and employee -->
  <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="boxStrokeColor">@color/colorAccent</item>
    <item name="boxStrokeErrorColor">@color/colorRed</item>
    <item name="android:textColorHint">@color/text_color</item>
  </style>

  <!--button -->
  <style name="button" parent="AppTheme">
    <item name="android:background">@drawable/ic_btn_filled_description</item>
    <item name="android:textColor">@color/colorWhite</item>
    <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    <item name="android:layout_height">@dimen/button_height</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <!--button -->
  <style name="button2" parent="AppTheme">
    <item name="android:background">@drawable/ic_btn_background_yellow</item>
    <item name="android:textColor">@color/colorBlack</item>
    <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    <item name="android:layout_height">@dimen/button_height</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <!--button Style 2 -->
  <style name="buttonStyle" parent="AppTheme">
    <item name="android:background">@drawable/btn_border</item>
    <item name="android:textColor">@color/colorWhite</item>
    <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    <item name="android:layout_height">@dimen/button_height</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <!--login button textStyle-->
  <style name="buttonTextStyle">
    <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    <item name="android:textColor">@color/colorWhite</item>
    <item name="android:letterSpacing">0.02</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <!--cart button textStyle-->
  <style name="buttonTextStyle2">
    <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    <item name="android:textColor">@color/colorBlack</item>
    <item name="android:letterSpacing">0.02</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <!--pin verification toolbar -->
  <style name="materialCardView">
    <item name="cardBackgroundColor">@color/colorWhite</item>
    <item name="cardCornerRadius">26dp</item>
    <item name="cardElevation">1dp</item>
    <item name="elevation">1dp</item>
    <item name="android:translationZ">3dp</item>
  </style>

  <!--toolbar -->
  <style name="toolbarTextStyle">
    <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    <item name="android:textColor">@color/colorBlack</item>
    <item name="android:textSize">22sp</item>
    <item name="android:letterSpacing">-0.01</item>
    <item name="android:textStyle">bold</item>
    <item name="fontFamily">@font/martel_sans</item>
  </style>

  <!--pin verification input -->
  <style name="inputTextStyle">
    <item name="android:textAppearance">@style/TextStyle</item>
    <item name="android:background">@drawable/ic_input_border</item>
    <item name="android:textSize">14sp</item>
    <item name="android:paddingStart">24dp</item>
    <item name="android:paddingEnd">26dp</item>
    <item name="android:cursorVisible">false</item>
    <item name="android:lineSpacingExtra">0sp</item>
  </style>

  <!--pin verification -->
  <style name="warningTextStyle">
    <item name="android:textAppearance">@style/TextStyle</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/colorRed</item>
    <item name="android:lineSpacingExtra">3sp</item>
  </style>

  <!--pin verification -->
  <style name="materialDropdown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
    <item name="android:textAppearance">@style/TextStyle</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/colorRed</item>
    <item name="android:lineSpacingExtra">3sp</item>
  </style>

  <!-- PosSystem  -->
  <style name="noBillsTextStyle">
    <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    <item name="android:textColor">@color/text_color</item>
    <item name="android:textSize">20sp</item>
    <item name="android:letterSpacing">-0.01</item>
    <item name="fontFamily">@font/martel_sans</item>
  </style>

  <!-- bs total  -->
  <style name="bsTotalTextStyle">
    <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    <item name="android:textColor">@color/colorBlack</item>
    <item name="android:textSize">@dimen/sp_18</item>
    <item name="android:letterSpacing">-0.01</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center</item>
    <item name="fontFamily">@font/martel_sans</item>
  </style>

  <!--add bill, Pos system(total Price) -->
  <style name="addPhotoTextStyle">
    <item name="android:textAppearance">@style/TextStyle</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/colorBlack</item>
  </style>

  <!--add bill -->
  <style name="itemQuantityTextStyle">
    <item name="android:textAppearance">@style/TextStyle</item>
    <item name="android:textSize">13sp</item>
    <item name="android:letterSpacing">-0.01</item>
    <item name="android:textColor">@color/colorBlack</item>
    <item name="fontFamily">@font/martel_sans</item>
  </style>

  <!--add bill -->
  <style name="itemQuantityCounterTextStyle">
    <item name="android:textAppearance">@style/TextStyle</item>
    <item name="android:textSize">14sp</item>
    <item name="android:letterSpacing">-0.01</item>
    <item name="android:textColor">@color/colorBlack</item>
    <item name="fontFamily">@font/martel_sans</item>
  </style>

  <!-- bill Activity -->
  <style name="titleTextStyle">
    <item name="android:textAppearance">@style/TextStyle</item>
    <item name="android:textSize">16sp</item>
    <item name="android:letterSpacing">-0.01</item>
    <item name="android:textColor">@color/colorBlack</item>
    <item name="fontFamily">@font/martel_sans</item>
    <item name="android:textStyle">bold</item>
  </style>

  <!-- Category Activity -->
  <style name="rowTitleTextStyle">
    <item name="android:textAppearance">@style/TextStyle</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/colorBlack</item>
  </style>

  <!-- bill Activity -->
  <style name="titleAmountTextStyle">
    <item name="android:textAppearance">@style/TextStyle</item>
    <item name="android:textSize">14sp</item>
    <item name="android:letterSpacing">-0.01</item>
    <item name="android:textColor">@color/colorBlack</item>
    <item name="fontFamily">@font/martel_sans</item>
    <item name="android:textStyle">bold</item>
  </style>

  <!-- bill Activity -->
  <style name="clintAmountTextStyle">
    <item name="android:textAppearance">@style/TextStyle</item>
    <item name="android:textSize">14sp</item>
    <item name="android:letterSpacing">-0.02</item>
    <item name="android:lineSpacingExtra">0sp</item>
    <item name="android:textColor">@color/colorBlack</item>
  </style>

  <!--add bill -->
  <style name="billMemoTitleTextStyle">
    <item name="android:textAppearance">@style/TextStyle</item>
    <item name="android:textSize">13sp</item>
    <item name="android:letterSpacing">-0.01</item>
    <item name="android:textColor">@color/colorBlack</item>
    <item name="fontFamily">@font/martel_sans</item>
  </style>

  <!-- bill Activity -->
  <style name="productItemTextStyle">
    <item name="android:textAppearance">@style/TextStyle</item>
    <item name="android:textSize">14sp</item>
    <item name="android:letterSpacing">-0.02</item>
    <item name="android:lineSpacingExtra">0sp</item>
  </style>

  <!-- bill Activity -->
  <style name="bottomBarTitleTextStyle">
    <item name="android:textAppearance">@style/TextStyle</item>
    <item name="android:textSize">24sp</item>
    <item name="android:letterSpacing">0.0</item>
    <item name="android:textColor">@color/text_color</item>
    <item name="fontFamily">@font/martel_sans</item>
  </style>

  <!--Dialog view -->
  <style name="dialogTextStyle">
    <item name="android:textAppearance">@style/TextStyle</item>
    <item name="android:textSize">12sp</item>
    <item name="android:letterSpacing">-0.01</item>
    <item name="android:textColor">@color/colorBlack</item>
  </style>

  <!--radio button style -->
  <style name="radioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
    <item name="android:textAppearance">@style/TextStyle</item>
    <item name="android:textSize">@dimen/sp_14</item>
    <item name="android:letterSpacing">-0.01</item>
    <item name="buttonTint">@drawable/radio_button_style</item>
    <item name="android:textColor">@color/colorBlack</item>
  </style>

  <!--checkbox text style -->
  <style name="checkboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
    <item name="android:textAppearance">@style/TextStyle</item>
    <item name="android:textSize">@dimen/sp_14</item>
    <item name="android:letterSpacing">-0.01</item>
    <item name="buttonTint">@drawable/radio_button_style</item>
    <item name="android:textColor">@color/colorBlack</item>
  </style>

  <!--Dialog view -->
  <style name="dialogSubTitleTextStyle">
    <item name="android:textAppearance">@style/TextStyle</item>
    <item name="android:textSize">12sp</item>
    <item name="lineHeight">14sp</item>
    <item name="android:textColor">@color/colorBlack</item>
  </style>

  <!--base dialog style -->
  <style name="dialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="cardBackgroundColor">@color/colorWhite</item>
    <item name="cardCornerRadius">@dimen/dp_26</item>
    <item name="dialogCornerRadius">@dimen/dp_26</item>
    <item name="cardElevation">@dimen/dp_1</item>
    <item name="android:background">@drawable/dialog_background</item>
  </style>

  <!--test -->
  <style name="chipStyle">
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:checkable">false</item>
    <item name="android:strokeColor">@color/border_color</item>
  </style>

</resources>
